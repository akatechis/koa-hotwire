    "typescript": "^4.3.2",
    "why-is-node-running": "^2.2.0"
  },
  "peerDependencies": {
    "koa": "^2.13.0"
  },
  "dependencies": {
    "consolidate": "^0.16.0",
    "ws": "^7.5.0"
  },
  "engines": {
    "node": ">= 12.0.0"
