    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "hogan": "^1.0.2",
    "husky": "^6.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "mocha": "^8.4.0",
    "node-html-parser": "^3.3.6",
