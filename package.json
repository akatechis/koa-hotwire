{
  "name": "koa-hotwire",
  "version": "0.0.0-development",
  "description": "A hotwire implementation for the Koa.js web framework",
  "main": "artifacts/build/koa-hotwire.js",
  "types": "artifacts/build/koa-hotwire.d.ts",
  "repository": "https://github.com/akatechis/koa-hotwire",
  "author": "Alexandros Katechis",
  "keywords": [
    "koa",
    "html",
    "hotwire",
    "hotwired",
    "turbo",
    "frames",
    "streams",
    "stimulus",
    "majestic",
    "monolith"
  ],
  "exports": {
    ".": {
      "require": "./artifacts/build/koa-hotwire.js"
    },
    "./frames": {
      "require": "./artifacts/build/frames.js"
    },
    "./streams": {
      "require": "./artifacts/build/streams.js"
    }
  },
  "license": "MIT",
  "files": [
    "artifacts/build/*"
  ],
  "scripts": {
