    "@types/koa-bodyparser": "^4.3.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.1",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^7.4.5",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.3.4",
    "chai-cheerio": "^1.0.0",
    "eslint": "^7.28.0",
