    "debug": "node --inspect-brk node_modules/mocha/bin/mocha",
    "clean": "rm -rf artifacts koa-hotwire-*.tgz",
    "prepack": "yarn build",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
